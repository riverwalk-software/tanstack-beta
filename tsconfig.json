{
  "include": [
    "*.ts",
    "*.tsx",
    "scripts/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "packages/**/*.ts",
    "packages/**/*.tsx"
  ],
  "compilerOptions": {
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,

    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "isolatedModules": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true, // Required for MDX: https://www.npmjs.com/package/vite-tsconfig-paths
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@cookies": ["packages/cookies/src/index.ts"],
      "@prelude": ["packages/prelude/src/index.ts"],
      "@schools": ["packages/schools/src/index.ts"],
      "@theme": ["packages/theme/src/index.ts"],
      "@userStore": ["packages/userStore/src/index.ts"]
    },
    "noEmit": true,
    "verbatimModuleSyntax": false, // https://tanstack.com/start/latest/docs/framework/react/build-from-scratch#typescript-configuration
    "types": ["./worker-configuration.d.ts", "node"] // https://developers.cloudflare.com/workers/languages/typescript/#3-make-sure-your-tsconfigjson-includes-the-generated-types
  }
}
