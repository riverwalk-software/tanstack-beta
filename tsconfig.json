{
  "include": ["*.ts", "packages", "scripts", "src"],
  "compilerOptions": {
    // Paths
    "baseUrl": ".",
    "paths": {
      "@authentication": ["packages/authentication/src/index.ts"],
      "@components": ["src/components/index.ts"],
      "@constants": ["src/constants/index.ts"],
      "@theme": ["packages/theme/src/index.ts"],
      "@/lib/*": ["src/lib/*"],
      "@prelude": ["packages/prelude/src/index.ts"]
    },

    // Types
    "types": [
      "vite/client" // Vite: https://vite.dev/guide/features.html#client-types
    ],

    // Base
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true, // MDX: https://github.com/aleclarson/vite-tsconfig-paths#%EF%B8%8F-non-typescript-modules-need-special-configuration
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true, // Vite: https://vite.dev/guide/features.html#typescript-compiler-options

    // Strictness
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "exactOptionalPropertyTypes": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedSideEffectImports": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,

    // Transpilation: https://vite.dev/guide/features#transpile-only
    "noEmit": true,

    // Tanstack Start: https://tanstack.com/start/latest/docs/framework/react/build-from-scratch#typescript-configuration
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "module": "esnext",
    "target": "es2022",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "verbatimModuleSyntax": false,

    // Plugins
    "plugins": [
      // Must be last
      {
        "name": "@effect/language-service"
      }
    ]
  }
}
