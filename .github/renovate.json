{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":disableRateLimiting",
    ":enableVulnerabilityAlertsWithLabel(security)",
    ":labels(dependencies)",
    ":maintainLockFilesWeekly",
    ":pinAllExceptPeerDependencies",
    ":reviewer(andreilgeorgescu)",
    ":semanticCommits",
    ":separateMultipleMajorReleases",
    ":timezone(US/Eastern)",
    "group:vite"
  ],
  "addLabels": ["{{manager}}", "{{updateType}}"],
  "minimumReleaseAge": "14 days",
  "osvVulnerabilityAlerts": true,
  "rollbackPrs": true,
  "packageRules": [
    {
      "matchDatasources": ["npm"],
      "matchPackageNames": ["@astrojs/**", "astro", "sharp"],
      "groupName": "Astro"
    },
    {
      "matchDatasources": ["npm"],
      "matchPackageNames": ["@better-auth/**", "@polar-sh/**", "better-auth"],
      "groupName": "Better Auth"
    },
    {
      "matchDatasources": ["npm"],
      "matchPackageNames": ["@effect/**", "effect"],
      "groupName": "Effect"
    },
    {
      "matchDatasources": ["npm"],
      "matchPackageNames": [
        "@types/react-dom",
        "@types/react",
        "@vitejs/plugin-react",
        "babel-plugin-react-compiler",
        "react-dom",
        "react"
      ],
      "groupName": "React"
    },
    {
      "matchDatasources": ["npm"],
      "matchPackageNames": [
        "@radix-ui/**",
        "class-variance-authority",
        "clsx",
        "lucide-react",
        "shadcn",
        "tailwind-merge",
        "tw-animate-css"
      ],
      "groupName": "shadcn"
    },
    {
      "matchDatasources": ["npm"],
      "matchPackageNames": [
        "@types/better-sqlite3",
        "better-sqlite3",
        "sqlite"
      ],
      "groupName": "SQLite"
    },
    {
      "matchDatasources": ["npm"],
      "matchPackageNames": ["tsdown", "tsx", "typescript"],
      "groupName": "TypeScript"
    }
  ]
}
