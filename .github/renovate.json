{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":disableRateLimiting",
    ":enableVulnerabilityAlertsWithLabel(security)",
    ":labels(dependencies)",
    ":maintainLockFilesWeekly",
    ":pinAllExceptPeerDependencies",
    ":reviewer(andreilgeorgescu)",
    ":semanticCommits",
    ":separateMultipleMajorReleases",
    ":timezone(US/Eastern)",
    "group:vite"
  ],
  "addLabels": ["{{manager}}", "{{updateType}}"],
  "minimumReleaseAge": "14 days",
  "osvVulnerabilityAlerts": true,
  "rollbackPrs": true,
  "packageRules": [
    {
      "matchDatasources": ["npm"],
      "matchPackageNames": ["better-auth", "@better-auth/**", "@polar-sh/**"],
      "groupName": "Better Auth"
    },
    {
      "matchDatasources": ["npm"],
      "matchPackageNames": [
        "sqlite",
        "better-sqlite3",
        "@types/better-sqlite3"
      ],
      "groupName": "SQLite"
    },
    {
      "matchDatasources": ["npm"],
      "matchPackageNames": [
        "@radix-ui/**",
        "class-variance-authority",
        "clsx",
        "lucide-react",
        "shadcn",
        "tailwind-merge",
        "tw-animate-css"
      ],
      "groupName": "shadcn"
    }
  ]
}
