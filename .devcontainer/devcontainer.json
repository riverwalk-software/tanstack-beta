{
  "image": "mcr.microsoft.com/devcontainers/base:2-ubuntu-24.04",
  "features": {
    "ghcr.io/devcontainers/features/git-lfs:1": {
      "autoPull": false
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "22"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "-dbaeumer.vscode-eslint",
        "adpyke.codesnap",
        "biomejs.biome",
        "christian-kohler.npm-intellisense",
        "christian-kohler.path-intellisense",
        "EditorConfig.EditorConfig",
        "GitHub.copilot",
        "github.vscode-github-actions",
        "GitHub.vscode-pull-request-github",
        "ms-vsliveshare.vsliveshare",
        "redhat.vscode-yaml"
        // "WallabyJs.console-ninja"
      ]
    }
  },
  "onCreateCommand": "git lfs install",
  "postCreateCommand": "git lfs pull",
  "postAttachCommand": "pnpm install --prefer-offline --no-audit --progress=false --frozen-lockfile && pnpm dev",
  "forwardPorts": [3000],
  "portsAttributes": {
    "3000": {
      "label": "Application",
      "onAutoForward": "openBrowserOnce"
    }
  }
}
