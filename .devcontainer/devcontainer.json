{
  "image": "mcr.microsoft.com/devcontainers/base:2-ubuntu-24.04",
  "features": {
    "ghcr.io/devcontainers/features/git-lfs:1": {
      "autoPull": false
    },
    "ghcr.io/devcontainers-extra/features/starship:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "22.20.0"
    }
  },
  "containerEnv": {
    "BETTER_AUTH_URL": "http://localhost:3000",
    "CI": "false",
    "NODE_ENV": "development",
    "POLAR_SUCCESS_URL": "http://localhost:3000/success?checkout_id={CHECKOUT_ID}"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "-dbaeumer.vscode-eslint",
        "adpyke.codesnap",
        "biomejs.biome",
        "bradlc.vscode-tailwindcss", // Needs more configuration
        "christian-kohler.npm-intellisense",
        "christian-kohler.path-intellisense",
        "EditorConfig.EditorConfig",
        "effectful-tech.effect-vscode",
        "formulahendry.auto-close-tag",
        "GitHub.copilot", // Needs more configuration
        "github.vscode-github-actions",
        "GitHub.vscode-pull-request-github", // Needs more configuration
        "ms-vsliveshare.vsliveshare",
        "oxc.oxc-vscode",
        "redhat.vscode-yaml",
        "unifiedjs.vscode-mdx",
        "Vercel.turbo-vsc",
        "vitest.explorer"
        // "WallabyJs.console-ninja"
      ]
    }
  },
  "onCreateCommand": "bash .devcontainer/scripts/onCreateCommand.bash",
  "updateContentCommand": "bash .devcontainer/scripts/updateContentCommand.bash",
  "postCreateCommand": "bash .devcontainer/scripts/postCreateCommand.bash",
  "postStartCommand": "bash .devcontainer/scripts/postStartCommand.bash",
  "postAttachCommand": "bash .devcontainer/scripts/postAttachCommand.bash",
  "forwardPorts": [3000, 4321],
  "portsAttributes": {
    "3000": {
      "label": "Application"
    },
    "4000": {
      "label": "Marketing"
    },
    "5000": {
      "label": "Documentation"
    }
  }
}
