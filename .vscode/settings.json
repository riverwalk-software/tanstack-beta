{
  //// Visual Studio Code
  /// Customization
  "diffEditor.hideUnchangedRegions.enabled": true,
  "diffEditor.ignoreTrimWhitespace": true,
  "editor.detectIndentation": false,
  "editor.foldingImportsByDefault": true,
  "editor.formatOnSave": true,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.trimAutoWhitespace": true,
  "editor.wordWrap": "off",
  "editor.wordWrapColumn": 80,
  "explorer.excludeGitIgnore": true,
  "explorer.fileNesting.patterns": {
    ".gitignore": ".gitattributes"
  },
  "files.associations": {
    "wrangler.json": "jsonc",
    "*.css": "tailwindcss"
  },
  "files.autoSave": "off",
  "files.encoding": "utf8",
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.readonlyInclude": {
    "**/.editorconfig": true,
    "**/.gitattributes": true,
    "**/.gitignore": true,
    "**/{,*-,*.}{lock,lockfile}{,-*,.*}": true,
    "**/{,*-,*.}{gen,generated}{,-*,.*}": true,
    "**/{CHANGELOG,LICENSE,LEGAL}{,.*}": true,
    "**/*.svg": true
  },
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "git.autofetch": true,
  "git.blame.editorDecoration.enabled": true,
  "git.confirmEmptyCommits": true,
  "git.confirmForcePush": true,
  "git.enableSmartCommit": false,
  "git.mergeEditor": true,
  "git.postCommitCommand": "none",
  "git.pruneOnFetch": true,
  "git.suggestSmartCommit": false,
  "html.format.enable": false,
  "javascript.format.enable": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.validate.enable": true,
  "markdown.editor.drop.copyIntoWorkspace": "never",
  "markdown.editor.filePaste.copyIntoWorkspace": "never",
  "markdown.updateLinksOnFileMove.enabled": "always",
  "notebook.formatOnSave.enabled": true,
  "notebook.insertFinalNewline": true,
  "notebook.output.wordWrap": true,
  "scm.defaultViewMode": "tree",
  "search.exclude": {
    "**/.editorconfig": true,
    "**/.gitattributes": true,
    "**/.gitignore": true,
    "**/{,*-,*.}{lock,lockfile}{,-*,.*}": true,
    "**/{,*-,*.}{gen,generated}{,-*,.*}": true,
    "**/{CHANGELOG,LICENSE,LEGAL}{,.*}": true,
    "**/*.svg": true,
    "**/*.xsl": true
  },
  "search.useIgnoreFiles": true,
  "typescript.format.enable": false,
  "typescript.inlayHints.enumMemberValues.enabled": false,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "typescript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.parameterNames.suppressWhenArgumentMatchesName": true,
  "typescript.inlayHints.parameterTypes.enabled": true,
  "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
  "typescript.inlayHints.variableTypes.enabled": true,
  "typescript.inlayHints.variableTypes.suppressWhenTypeMatchesName": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.validate.enable": true,
  //// Language-Specific
  "[markdown]": {
    "editor.tabSize": 4,
    "editor.wordWrap": "on"
  },
  "[mdx]": {
    "editor.tabSize": 4,
    "editor.wordWrap": "on"
  },
  "[plaintext]": {
    "editor.tabSize": 4,
    "editor.wordWrap": "on"
  },
  //// Extensions
  // adpyke.codesnap
  "codesnap.shutterAction": "copy",
  // biomejs.biome
  "editor.defaultFormatter": "biomejs.biome",
  "editor.codeActionsOnSave": {
    "source.fixAll.biome": "explicit",
    "source.removeUnusedImports": "explicit"
  },
  // bradlc.vscode-tailwindcss
  "editor.quickSuggestions": {
    "strings": "on"
  },
  // christian-kohler.path-intellisense
  "javascript.suggest.paths": false,
  "path-intellisense.autoSlashAfterDirectory": true,
  "path-intellisense.autoTriggerNextSuggestion": true,
  "typescript.suggest.paths": false,
  // EditorConfig.EditorConfig
  "editorconfig.generateAuto": false,
  "editorconfig.showMenuEntry": false,
  // ms-vsliveshare.vsliveshare
  "liveshare.allowGuestDebugControl": true,
  "liveshare.allowGuestTaskControl": true,
  "liveshare.alwaysFollowHost": true,
  "liveshare.languages.allowGuestCommandControl": true,
  "liveshare.launcherClient": "visualStudioCode",
  "liveshare.notebooks.allowGuestExecuteCells": true,
  "liveshare.publishWorkspaceInfo": true,
  // redhat.vscode-yaml
  "redhat.telemetry.enabled": false,
  "yaml.extension.recommendations": false,
  "yaml.format.enable": false,
  "yaml.schemaStore.enable": false,
  "yaml.validate": false
}
