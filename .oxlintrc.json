{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "rules": {
    "eslint/curly": ["error", "multi-line", "consistent"],
    "eslint/func-names": "allow", // Conflicts with Effect generators
    "eslint/id-length": "allow",
    "eslint/max-lines-per-function": "allow",
    "eslint/max-lines": "allow",
    "eslint/max-params": ["deny", { "max": 1 }],
    "eslint/new-cap": "allow", // Conflicts wtih Effect functions
    "eslint/no-empty-function": "warn",
    "eslint/no-empty": "warn",
    "eslint/no-ternary": "allow",
    "eslint/no-unused-vars": "warn",
    "eslint/sort-imports": "allow", // Formatting rule
    "eslint/sort-keys": "allow", // Formatting rule
    "eslint/sort-vars": "allow", // Formatting rule
    "eslint/yoda": ["deny", "never", { "onlyEquality": true }],
    "import/consistent-type-specifier-style": "allow",
    "import/extensions": ["deny", "ignorePackages"],
    "import/max-dependencies": "allow",
    "import/prefer-default-export": "allow",
    "import/unambiguous": "warn",
    "oxc/no-optional-chaining": "allow",
    "oxc/no-rest-spread-properties": "allow",
    "react/jsx-filename-extension": ["deny", { "extensions": [".tsx"] }],
    "react/react-in-jsx-scope": "allow",
    "typescript/consistent-type-imports": "allow",
    "typescript/explicit-function-return-type": "allow",
    "typescript/explicit-module-boundary-types": "allow",
    "unicorn/error-message": "warn",
    "unicorn/no-empty-file": "warn",
    "eslint/no-magic-numbers": [
      "deny",
      {
        "ignore": [-1, 0, 1],
        "ignoreArrayIndexes": true,
        "ignoreDefaultValues": true,
        "ignoreClassFieldInitialValues": true,
        "enforceConst": true,
        "detectObjects": false,
        "ignoreNumericLiteralTypes": true,
        "ignoreReadonlyClassProperties": true,
        "ignoreTypeIndexes": true
      }
    ],
    // React Compiler
    "react_perf/jsx-no-new-array-as-prop": "allow",
    "react_perf/jsx-no-new-function-as-prop": "allow"
  },
  "plugins": [
    "typescript",
    "unicorn",
    "react",
    "react-perf",
    "oxc",
    "import",
    "jsdoc",
    "jsx-a11y",
    "node",
    "promise",
    "vitest"
  ],
  "overrides": [
    {
      "files": ["*.tsx"],
      "rules": {
        "eslint/func-style": ["deny", "declaration"],
        "eslint/max-lines-per-function": "allow",
        "import/exports-last": "allow"
      }
    },
    {
      "files": ["*.config.*", "router.tsx"],
      "rules": {
        "eslint/func-style": "allow",
        "eslint/max-lines-per-function": "allow",
        "import/exports-last": "allow",
        "import/no-anonymous-default-export": "allow",
        "import/no-default-export": "allow",
        "import/prefer-default-export": "allow",
        "typescript/explicit-module-boundary-types": "allow"
      }
    }
  ],
  "categories": {
    "correctness": "deny",
    "perf": "deny",
    "restriction": "deny",
    "suspicious": "deny",
    "pedantic": "deny",
    "style": "deny",
    "nursery": "allow"
  },
  "settings": {
    "jsdoc": {
      "tagNamePreference": {
        "customTagName": "vitest-environment"
      }
    }
  }
}
